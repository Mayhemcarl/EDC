}
    function isAdmin() {
      return signedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;

      allow create: if signedIn() && request.auth.uid == uid;

      // El usuario NO puede cambiar su role desde el cliente
      allow update: if signedIn()
        && request.auth.uid == uid
        && request.resource.data.role == resource.data.role;

      match /fcmTokens/{tokenId} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }

      match /payments/{monthKey} {
        // Cada alumno puede leer sus pagos
        allow read: if signedIn() && request.auth.uid == uid;
        // Solo admin registra pagos (o el propio usuario si quieres habilitar auto-pago)
        allow write: if isAdmin();
      }
    }

    match /classes/{classId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /sessions/{sessionId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();

      match /enrollments/{uid} {
        // Alumno se inscribe solo a s√≠ mismo (1 doc por UID)
        allow create, delete: if signedIn() && request.auth.uid == uid;

        // Marcar asistencia: solo admin
        allow update: if isAdmin();

        // Lectura: admin siempre; alumno solo si rosterPublic=true
        allow read: if signedIn() && (
          isAdmin() ||
          get(/databases/$(database)/documents/sessions/$(sessionId)).data.rosterPublic == true
        );
      }
    }
  }
}
